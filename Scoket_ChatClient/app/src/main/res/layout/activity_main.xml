<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.scoket_chatclient.MainActivity">

    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/start_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"/>
    <Button
        android:layout_marginTop="200dp"
        android:id="@+id/server_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_sent"/>
    <Button
        android:layout_marginTop="300dp"
        android:id="@+id/server_recived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/server_recive"/>
    <TextView
        android:layout_marginTop="400dp"
        android:id="@+id/server_recive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务器"/>
    <Button
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/init_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/init_client"
        />
    <Button
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/client_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/client_sent"
        />

    <Button
        android:layout_marginTop="300dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/client_recived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/client_recive"/>
    <TextView
        android:layout_marginTop="400dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/client_recive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端"/>
</RelativeLayout>
